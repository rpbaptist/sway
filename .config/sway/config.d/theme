# Apply gtk theming
exec_always {
  ~/.config/sway/scripts/import-gsettings

  eval $(keychain --eval --quiet --noask --agents gpg,ssh id_rsa)
}

### Gaps
smart_gaps on
gaps inner 4
gaps outer 2

# Hide titlebar on windows: 
#default_border pixel 1

font pango:Source Code Pro Medium 10

# Thin borders:
#smart_borders on

# Set wallpaper:
exec swaybg -i ~/.config/sway/sway.png

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

set $bg #282828
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984
set $bghard #1d2021
set $white #ebdbb2
set $beige #d5c4a1

# class                 border  bground text    indicator child_border
client.focused          $white  $bghard $white  $green  $white
client.focused_inactive $bghard $bghard $beige  $green  $bghard
client.unfocused        $bghard $bghard $beige  $green  $bghard
client.urgent           $red    $red    $white  $red    $red
client.placeholder      $bghard $bghard $beige  $green  $bghard
client.background       $bghard

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
   swaybar_command waybar
}
